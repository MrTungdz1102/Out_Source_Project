@model Out_Source_Project.Models.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Admin">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Accounts">Quản lý tài khoản</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa tài khoản</li>
    </ol>
    <h6 class="slim-pagetitle">Xóa tài khoản</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <form asp-area="Admin" asp-action="Delete" asp-controller="Accounts" asp-route-id="@Model.AccountId" method="post">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    ID:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" asp-for="AccountId" type="text" readonly>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Họ và Tên:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" asp-for="FullName" type="text" readonly>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Email:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" asp-for="Email" type="text" readonly>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Số Điện Thoại:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" asp-for="Phone" type="text"readonly>
                </div>
            </div>

            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Trạng Thái:
                </div>
                <div class="col-7 col-sm-8">
                    @if (Model.Active == true)
                    {
                        <span class="badge badge-primary">Hoạt Động</span>
                    }
                    else
                    {
                        <span class="badge badge-primary">Bị Khóa</span>
                    }
                </div>
            </div>
            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0" type="submit">Đồng Ý</button>
                <a class="btn btn-secondary bd-0" asp-action="Index" asp-area="Admin" asp-controller="Accounts">Hủy</a>
            </div><!-- form-layout-footer -->
        </form>
    </div><!-- form-layout -->

</div><!-- section-wrapper -->
