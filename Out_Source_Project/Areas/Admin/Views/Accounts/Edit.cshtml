@model Out_Source_Project.Models.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Admin">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Accounts">Quản lý tài khoản</a></li>
        <li class="breadcrumb-item active" aria-current="page">Sửa tài khoản</li>
    </ol>
    <h6 class="slim-pagetitle">Sửa tài khoản</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-action="Edit" asp-controller="Accounts" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="AccountId" />
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="LastLogin" />
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Họ và Tên: <span class="tx-danger">*</span></label>
                        <input class="form-control" asp-for="FullName" type="text">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Email: <span class="tx-danger">*</span></label>
                        <input class="form-control" asp-for="Email" type="text">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Số Điện Thoại: <span class="tx-danger">*</span></label>
                        <input class="form-control" asp-for="Phone" type="text">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Mật Khẩu: <span class="tx-danger">*</span></label>
                        <input class="form-control" asp-for="Password" type="text">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Salt: <span class="tx-danger">*</span></label>
                        <input class="form-control" asp-for="Salt" type="text">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Vai Trò: <span class="tx-danger">*</span></label>
                        <select class="form-control select2" asp-for="RoleId" asp-items="@ViewBag.Role">
                            <option value="">-- Chọn vai trò --</option>
                        </select>
                    </div>
                </div>
                
               
                <div style="text-align: center !important" class="form-layout-footer">
                    <button type="submit" class="btn btn-primary bd-0">Lưu</button>
                    <a class="btn btn-secondary bd-0" asp-action="Index" asp-area="Admin" asp-controller="Accounts">Hủy</a>
                </div>
            </div>
        </form>
    </div>
</div>