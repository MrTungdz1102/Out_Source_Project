@model IEnumerable<Out_Source_Project.Models.Message>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Admin">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Messages">Quản lý quyền truy cập</a></li>
        @*<li class="breadcrumb-item active" aria-current="page">Basic Tables</li>*@
    </ol>
    <h6 class="slim-pagetitle">Quản lý quyền truy cập</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <div class="table-responsive">
        <table class="table mg-b-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Số Điện Thoại</th>
                    <th>#</th>
                </tr>
            </thead>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                            <tbody>
                                <tr>
                                    <th scope="row">@item.MsgId</th>
                                    <td>@item.Email</td>
                                    <td>@item.Number</td>
                                    <td>
                                        <a asp-area="Admin" asp-action="Details" asp-route-id="@item.MsgId" asp-controller="Messages" class="btn btn-primary">Xem</a>
                                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.MsgId" asp-controller="Messages" class="btn btn-danger">Xóa</a>
                                    </td>
                                </tr>
                            </tbody>
                }
            }
        </table>
    </div><!-- table-responsive -->
</div>