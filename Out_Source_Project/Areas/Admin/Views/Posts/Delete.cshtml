@model Out_Source_Project.Models.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Admin">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Categories">Quản lý bài viết</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa bài viết</li>
    </ol>
    <h6 class="slim-pagetitle">Xóa bài viết</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <form asp-area="Admin" asp-action="Delete" asp-controller="Posts" asp-route-id="@Model.PostId" method="post">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    ID:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" asp-for="PostId" type="text">
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tên bài viết:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" asp-for="Title" type="text">
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Mô tả ngắn:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" asp-for="Scontents" type="text">
                </div>
            </div>
            
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Trạng Thái:
                </div>
                <div class="col-7 col-sm-8">
                    @if (Model.Published == true)
                    {
                        <span class="badge badge-primary">Xuất Bản</span>
                    }
                    else
                    {
                        <span class="badge badge-primary">Không Xuất Bản</span>
                    }
                </div>
            </div>

            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Ảnh Bìa:
                </div>
                <div class="col-7 col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.Thumb))
                    {
                        <img width="80" height="80" src="~/images/posts/@Model.Thumb">
                    }
                </div>
            </div>
            



            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0" type="submit">Đồng Ý</button>
                <a class="btn btn-secondary bd-0" asp-action="Index" asp-area="Admin" asp-controller="Posts">Hủy</a>
            </div><!-- form-layout-footer -->
        </form>
    </div><!-- form-layout -->

</div><!-- section-wrapper -->
