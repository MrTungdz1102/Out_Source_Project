@model IEnumerable<Out_Source_Project.Models.Role>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Admin">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Roles">Quản lý quyền truy cập</a></li>
        @*<li class="breadcrumb-item active" aria-current="page">Basic Tables</li>*@
    </ol>
    <h6 class="slim-pagetitle">Quản lý quyền truy cập</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <a class="section-title btn btn-primary" asp-action="Create" asp-area="Admin" asp-controller="Roles">Thêm mới</a>
    

    <div class="table-responsive">
        <table class="table mg-b-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Role Name</th>
                    <th>Mô Tả</th>
                    <th>#</th>
                </tr>
            </thead>
           @if(Model != null && Model.Count() >0) {
                foreach(var item in Model)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@item.RoleId</th>
                            <td>@item.RoleName</td>
                            <td>@item.RoleDescription</td>
                            <td>
                                <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.RoleId" asp-controller="Roles" class="btn btn-primary">Sửa</a>
                                <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.RoleId" asp-controller="Roles" class="btn btn-danger">Xóa</a>
                            </td>
                        </tr>
                    </tbody>
                }
            }
        </table>
    </div><!-- table-responsive -->
</div><!-- section-wrapper -->